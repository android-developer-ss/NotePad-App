<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mynotepad"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.mynotepad.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mynotepad.GetColorActivity"
            android:label="@string/title_GetColorActivity"
            android:parentActivityName="com.example.mynotepad.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mynotepad.MainActivity" />
        </activity>
        <activity
            android:name="com.example.mynotepad.ShowRecentDocuments"
            android:label="@string/title_activity_show_recent_documents" >
        </activity>
        <activity
            android:name="com.example.mynotepad.CustomDialog"
            android:label="@string/title_activity_custom_dialog" >
        </activity>
    </application>

</manifest>
